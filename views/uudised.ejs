<!DOCTYPE html>
<html lang="et">
<head>
    <title>Klubi Uudised</title>
    <%- include('head') %>
    <style>
        body {
            font-family: Arial, sans-serif;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f4f4f4;
        }
        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 30px;
        }
        .uudised-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
        }
        .uudis-card {
            background: white;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            transition: transform 0.2s;
            display: flex;
            flex-direction: column;
        }
        .uudis-card:hover {
            transform: translateY(-5px);
        }
        .uudis-img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }
        .uudis-content {
            padding: 20px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }
        .uudis-title {
            margin-top: 0;
            color: #2c3e50;
        }
        .uudis-text {
            color: #666;
            line-height: 1.5;
            flex-grow: 1;
        }
        .loe-edasi {
            display: inline-block;
            margin-top: 15px;
            padding: 10px 20px;
            background-color: #3498db;
            color: white;
            text-decoration: none;
            border-radius: 4px;
            align-self: flex-start;
        }
        .loe-edasi:hover {
            background-color: #2980b9;
        }
    </style>
</head>
<body>
    <h1>Klubi Uudised</h1>
    
    <div class="uudised-container">
        <% uudised.forEach(function(uudis) { %>
            <div class="uudis-card">
                <img src="<%= uudis.pilt %>" alt="<%= uudis.pealkiri %>" class="uudis-img">
                <div class="uudis-content">
                    <h3 class="uudis-title"><%= uudis.pealkiri %></h3>
                    <p class="uudis-text"><%= uudis.kokkuvote %></p>
                    <a href="#" class="loe-edasi">Loe edasi</a>
                </div>
            </div>
        <% }); %>
    </div>
</body>
</html>

